<script>
    // USER LOGIK (Wie gehabt)
    const user = localStorage.getItem('matheLigaUser');
    
    if (user) {
        document.getElementById('userNameDisplay').innerText = user;
        document.getElementById('userCard').style.display = 'flex';
        
        // Links personalisieren (Ged√§chtnis-Hilfe)
        const links = document.querySelectorAll('a[href]');
        links.forEach(link => {
            if(link.href.includes('.html')) {
                link.href = link.getAttribute('href') + "?id=" + user;
            }
        });
    }

    function logout() {
        if(confirm("Ausloggen?")) {
            localStorage.removeItem('matheLigaUser');
            location.reload();
        }
    }
</script>

